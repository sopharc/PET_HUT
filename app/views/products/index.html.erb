 <% breadcrumb :products %>

  <!-- Search -->

  <div class ="container">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <h4>All Products</h4>

        </div>
        <div class="search-box col-sm-4">
            <%= form_tag products_path, method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-index",
                placeholder: "Find a product"
              %>
              <%= submit_tag "Search", class: "button-light", style: "display: none;" %>
            <% end %>
            </div>
     </div>
  </div>


<!-- product card -->
<div class ="container">
    <div class = "row">
      <% @products.each do |product| %>
          <div class="card-product col-sm-4">
            <%= link_to(product_path(product)) do %>
            <div class= "image-text-box" style='display: block; margin-left: auto; margin-right: auto; width: 100%;'>
               <%= image_tag "cat_rect.jpg", style: 'height:474px;width:296px;margin-bottom:20px;' %>
                    <div class="card-product-infos" >
                        <div class ="card-product-name">
                           <hr style="border: 0.25px solid black;" />
                          <%= link_to product.name.upcase, product %>
                         </div>
                         <div class = "card-product-desc">
                            <%= product.description %>
                         </div>
                    </div>
                </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
