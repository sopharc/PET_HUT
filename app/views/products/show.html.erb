  <div class="product-box">
    <div class="product-show-images product-width">
      <div class="big-image image-border">
        <%= image_tag "cat_rect.jpg", style: 'height:460px;width:420px;' %>
      </div>
      <div>
        <div class="image-border">
          <%= image_tag "hut_rect.jpg", style: 'height:225px;width:210px;' %>
        </div>
        <div class="image-border">
          <%= image_tag "bed_rect.jpg", style: 'height:225px;width:210px;' %>
        </div>
      </div>
    </div>
    <div class="product-width">
      <div class="name-holder">
        <div class="name-text">
          <%= @product.name %>
        </div>
        <div class="price-text right-pad">
          <%= humanized_money_with_symbol(@product.price) %>
          <br>

        </div>
      </div>
      <div class="name-holder">
        <div>
          <%= @product.category %>
          <br>
          <%= @product.description %>
          <br>
          <%= @product.dimensions %>
        </div>
        <div class="right-pad">
          <%= button_to '+', line_items_path(product_id: @product.id), class: 'empty-button big-plus' %>
        </div>
      </div>
    </div>
    <div class="link-box product-width">
      <%= link_to "All products", products_path, class: 'empty-button' %>
    </div>
  </div>



